@model GalleryVideoViewModel
@{
    ViewBag.Title = "Edit";
    ViewBag.Page = "Gallery Video";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>

        <div class="col-xs-10 col-lg-10">
            <!-- PAGE CONTENT BEGINS -->
            @using (Html.BeginForm("Edit", "GalleryVideo", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form", @id = "GalleryVideo-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(a => a.Id)
                <div class="form-group">
                    <label for="form-field-1">Enter Video Title<strong style="color: red">*</strong></label>
                    @Html.TextBoxFor(a => a.Title, new { @class = "form-control", placeholder = " Video Title", required = "required" })
                </div>
                <div class="form-group">
                    <label for="form-field-1">Enter Video Link<strong style="color: red">*</strong><br /><strong style="color:red">Direct link of youtube video</strong></label>
                    @Html.TextBoxFor(a => a.YoutubeVideoLink, new { @class = "form-control", placeholder = " Youtube Video Link", required = "required", type = "url" })
                </div>
                <div class="space-4"></div>

                <div class="clearfix form-actions">
                    <div>
                        <button class="btn btn-primary" type="submit">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Submit
                        </button>

                        &nbsp; &nbsp; &nbsp;
                        <button class="btn btn-warning" type="reset">
                            <i class="ace-icon fa fa-undo bigger-110"></i>
                            Reset
                        </button>
                    </div>
                </div>
                <div class="hr hr-24"></div>
            }

            <div class="hr hr-18 dotted hr-double"></div>

            <!-- PAGE CONTENT ENDS -->
        </div>
        <!-- div.table-responsive -->
        <!-- div.dataTables_borderWrap -->
    </div>
</div>