@model IList<SliderViewModel>
@{
    ViewBag.Title = "Index";
    ViewBag.Page = "Slider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>

        <!-- div.table-responsive -->
        <!-- div.dataTables_borderWrap -->
        <div>
            <div class="form-group">
                <a href="/Slider/Create" class="btn btn-primary btn-sm"><i class="fa fa-plus-circle"></i> Create New</a>
            </div>
            <table id="example1" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Sl No.</th>
                        <th>Link you want to redirect </th>
                        <th class="noExport">Image </th>

                        <th>
                            <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                            Last Update
                        </th>
                        <th class="noExport">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @{ int i = 0; }
                    @foreach (var item in Model.OrderByDescending(a=> a.Id).ToList())
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>@item.Title</td>
                            <td>
                                @if (item.FilePath != null && !string.IsNullOrEmpty(item.FilePath))
                                {
                                    <a href="@GetFileAddress.Slider/@item.FilePath" target="_blank">view file</a>
                                }
                            </td>
                            <td>@item.LastModificationDate.Value.ToString("dd/MMM/yyyy")</td>
                            <td>
                                <div class="action-buttons">
                                    <a class="green" href="/Slider/Edit/@item.Id" title="Edit Sliders">
                                        <i class="ace-icon fa fa-pencil bigger-130"></i>
                                    </a>

                                    <a class="red" href="/Slider/Remove/@item.Id" title="Delete Sliders">
                                        <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>