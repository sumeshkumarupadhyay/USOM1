                                   k++;
                                    <tr>
                                        <td>@k</td>
                                        <td>@item.TransactionDate</td>
                                        <td>@item.Amount</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
