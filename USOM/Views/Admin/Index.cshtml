    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <h3 class="text-center">Daily Collection</h3>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        @if (Model.DayWiseCollection == null || !Model.DayWiseCollection.Any())
                        {
                            <p>No collection</p>
                        }
                        else
                        {
                            <table class="table table-bordered table-striped mb-0">
                                <thead class="thin-border-bottom">
                                    <tr>
                                        <th>Sl No.</th>
                                        <th>Date</th>
                                        <th>Collection</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @{ int i = 0; }
                                    @foreach (var item in Model.DayWiseCollection)
                                    {
                                        i++;
                                        if (Model.DayWiseCollection.Count != 0)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>@item.TransactionDate</td>
                                                <td>@item.Amount</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                                        }
                        </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <h3 class="text-center">Week Wise Collection</h3>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped mb-0">
                            <thead class="thin-border-bottom">
                                <tr>
                                    <th>Sl No.</th>
                                    <th>Date</th>
                                    <th>Collection</th>
                                </tr>
                            </thead>

                            <tbody>
                                @{ int j = 0; }
                                @foreach (var item in Model.WeekWiseCollection)
                                {
                                    j++;
                                    
                                    <tr>
                                        <td>@j</td>
                                        <td>@item.TransactionDate</td>
                                        <td>@item.Amount</td>
                                    </tr>
                                }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <h3 class="text-center">Month Wise Collection</h3>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped mb-0">
                            <thead class="thin-border-bottom">
                                <tr>
                                    <th>Sl No.</th>
                                    <th>Month</th>
                                    <th>Collection</th>
                                </tr>
                            </thead>

                            <tbody>
                                @{ int k = 0; }
