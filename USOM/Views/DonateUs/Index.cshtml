@model IList<DonationViewModel>
@{
    ViewBag.Title = "Index";
    ViewBag.Page = "Donation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>

        <!-- div.table-responsive -->
        <!-- div.dataTables_borderWrap -->
        <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Sl No.</th>
                        <th>Name </th>
                        <th>Amount </th>
                        <th>Email </th>
                        <th>Phone Number </th>
                        <th>Address </th>
                        <th>City </th>
                        <th>State </th>
                        <th>Country </th>

                        <th>Message </th>


                        <th>
                            <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                            Quoted on
                        </th>
                        @*<th>Actions</th>*@
                    </tr>
                </thead>

                <tbody>
                    @{ int i = 0; }
                    @foreach (var item in Model.Where(a => a.OrderStatus == "2").OrderByDescending(a => a.Id).ToList())
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>@item.Name</td>
                            <td>₹@item.Amount/-</td>
                            <td><a href="mailto:@item.Email">@item.Email</a></td>
                            <td><a href="tel:@item.PhoneNumber">@item.PhoneNumber</a></td>
                            <td>@item.Address</td>
                            <td>@item.City</td>
                            <td>@item.State</td>
                            <td>@item.Country</td>

                            <td>@item.Message</td>


                            <td>@item.CreationDate.Value.ToString("dd/MMM/yyyy")</td>
                            @*<td>
                            <div class="action-buttons">

                                <a class="red" href="/Donation/Remove/@item.Id" title="Delete Contact">
                                    <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                </a>
                            </div>
                        </td>*@
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
