@model IList<ContactUsViewModel>
@{
    ViewBag.Title = "Index";
    ViewBag.Page = "Contact us";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="clearfix">
            <div class="pull-right tableTools-container"></div>
        </div>

        <!-- div.table-responsive -->
        <!-- div.dataTables_borderWrap -->
        <div>
            <table id="dynamic-table" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Sl No.</th>
                        <th>Name </th>
                        <th>Email </th>
                        <th>Phone Number </th>
                        <th>Subject </th>
                        <th>Message </th>

                        <th>
                            <i class="ace-icon fa fa-clock-o bigger-110 hidden-480"></i>
                            Quoted on
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @{ int i = 0; }
                    @foreach (var item in Model.OrderByDescending(a => a.Id).ToList())
                    {
                        i++;
                        <tr>
                            <td>@i</td>
                            <td>@item.Name</td>
                            <td><a href="mailto:@item.Email">@item.Email</a></td>
                            <td><a href="tel:@item.PhoneNumber">@item.PhoneNumber</a></td>
                            <td>@item.Subject</td>
                            <td>@item.Message</td>

                            <td>@item.CreationDate.Value.ToString("dd/MMM/yyyy")</td>
                            <td>
                                <div class="action-buttons">

                                    <a class="red" href="/contactus/Remove/@item.Id" title="Delete Contact">
                                        <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
